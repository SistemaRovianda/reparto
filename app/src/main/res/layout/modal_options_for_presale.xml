<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#040404"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/preSaleOptionsModal"
            android:textColor="#07F410"
            android:textSize="20sp" />

        <Button
            android:id="@+id/optionDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/listItemPreSaleDetailsButton"
            app:backgroundTint="#6542A3" />

        <Button
            android:id="@+id/optionModificateButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/listItemPreSaleModificateButton"
            app:backgroundTint="#6542A3" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>