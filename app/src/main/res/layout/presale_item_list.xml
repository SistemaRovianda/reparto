<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0C0C0C"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/foliosaleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preSaleItemFolio"
                android:textColor="#249FD6" />

            <TextView
                android:id="@+id/clientSaleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preSaleItemClient"
                android:textColor="#249FD6" />

            <TextView
                android:id="@+id/amountSaletextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preSaleItemAmount"
                android:textColor="#249FD6" />

            <TextView
                android:id="@+id/statusSaleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preSaleItemStatus"
                android:textColor="#249FD6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/optionsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/preSaleItemOptions"
                android:textColor="#FFFFFF"
                app:backgroundTint="#0022FF" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>